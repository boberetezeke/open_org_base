  </tr>

<% @task_definitions.each do |task_definition| %>
  <tr>
    <td><%= task_definition.name %></td>
    <td><%= task_definition.definition %></td>
    <td><%= task_definition.depends_on_task_definition %></td>
    <td><%= link_to 'Show', task_definition %></td>
    <td><%= link_to 'Edit', edit_task_definition_path(task_definition) %></td>
    <td><%= link_to 'Destroy', task_definition, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

